@using Microsoft.Graph
@model Microsoft.Teams.Samples.HelloWorld.Web.Controllers.ActiveChatsModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <style>
        .styled-table {
            border-collapse: collapse;
            margin: 25px 0;
            font-size: 0.9em;
            font-family: 'Segoe UI', Tahoma, Helvetica, Sans-Serif;
            min-width: 400px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
        }

        .styled-table thead tr {
            background-color: #009879;
            color: #ffffff;
            text-align: left;
        }

        .styled-table th,
        .styled-table td {
            padding: 12px 15px;
        }

        .styled-table tbody tr {
            border-bottom: 1px solid #dddddd;
        }

        .styled-table tbody tr:nth-of-type(even) {
            background-color: #f3f3f3;
        }

        .styled-table tbody tr:last-of-type {
            border-bottom: 2px solid #009879;
        }

        .styled-header {
            margin-top: 30px;
            margin-left: 30px;
            font-weight: 700;
            font-size: 1.5em;
            font-family: -apple-system,BlinkMacSystemFont,"Segoe UI","Apple Color Emoji","Segoe UI Emoji","Segoe UI Web",sans-serif;
        }

        button {
            appearance: auto;
            -webkit-writing-mode: horizontal-tb !important;
            text-rendering: auto;
            color: -internal-light-dark(black, white);
            letter-spacing: normal;
            word-spacing: normal;
            text-transform: none;
            text-indent: 0px;
            text-shadow: none;
            display: inline-block;
            text-align: center;
            align-items: flex-start;
            cursor: default;
            background-color: -internal-light-dark(rgb(239, 239, 239), rgb(59, 59, 59));
            box-sizing: border-box;
            margin: 0em;
            font-family: 'Segoe UI', Tahoma, Helvetica, Sans-Serif;
            padding: 1px 6px;
            border-width: 2px;
            border-style: outset;
            border-color: -internal-light-dark(rgb(118, 118, 118), rgb(133, 133, 133));
            border-image: initial;
        }
    </style>

    <script src="https://code.jquery.com/jquery-1.10.2.min.js" type="text/javascript"></script>

    <script>
        function togglemenu(id) {
            var x = document.getElementById(id);
            if (x.style.display === "none") {
                x.style.display = "block";
            } else {
                x.style.display = "none";
            }
        }

        function closeChat(chatId) {
            jQuery.ajax({
                type: "POST",
                url: '@(Url.Action("CloseChat", "CloseChat"))',
                data: { chatId: chatId },
                async: true,
                success: function (msg) {
                },
                error: function () {
                    alert("error");
                    return "error";
                }
            });
        }
    </script>

    <h1 class="styled-header">
        Active Ticket Chats
    </h1>

    <table id="tblCustomers" class="styled-table" cellpadding="0" cellspacing="0" style="margin-left:30px;">
        <thead>
            <tr>
                <th style="width:150px">Chat Name</th>
                <th style="width:150px">Actions</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Chat chat in Model.Chats)
            {
                string id = "closeChat" + chat.Id;
                <tr id="@id">
                    <td style="width:150px">@chat.Topic</td>
                    <td style="width:150px"><input type="button" data-id="@chat.Id" id="@id" value="Close Chat" onclick="closeChat(this.getAttribute('data-id')); togglemenu(this.getAttribute('id'))" /></td>
                </tr>
            }
        </tbody>
    </table>
    <br />
</body>
</html>
